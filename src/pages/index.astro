---
import Layout from '../layouts/Layout.astro';

const GREETINGS = ['Hello! 👋', 'Hola! 👋', 'Hej hej! 👋'];
const INBOXES = ['hello', 'hola', 'hejhej'];

const greeting = GREETINGS[Date.now() % GREETINGS.length];
const inbox = INBOXES[Date.now() % INBOXES.length];
---

<Layout title="Àlex Marlés — UX Engineer from Barcelona">
    <main>
        <h1>{greeting}</h1>
        <p>I am Àlex, a passionate UX Engineer based in ☀️ Barcelona.</p>
        <p>
            I am a creator at the intersection of Design & Development,
            dedicated to building intuitive, user-centered digital experiences.
        </p>
        <p>
            With a keen eye for design and a coder's precision, I bridge the gap
            between stunning aesthetics and seamless functionality.
        </p>
        <p>Come say hi! 👉 {inbox}@alexmarles.com</p>
    </main>
</Layout>
